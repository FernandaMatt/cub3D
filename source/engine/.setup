void	setup_map(t_game *game)
{
	int	x;
	int	y;

	x = 0;
	y = 0;
	game->map = malloc(game->map.cols * sizeof(int *));
	while (x < game->map.cols)
	{
		game->map[x] = malloc(game->map.rows * sizeof(int));
		x++;
	}
	x = 0;
	while (x < game->map.rows)
	{
		y = 0;
		while (y < game->map.rows)
		{
			game->map[x][y] = map[x][y];
			y++;
		}
		x++;
	}
}

